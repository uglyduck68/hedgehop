#if HAVE_EXT_DRMAA

DRMAA_SRC = $(DRMAA_DIR)/src 

/* copy the DRMAA files from the externals build */

#if IS_DARWIN 
public_copy_target($(DRMAA_LIB)/libdrmaa.dylib,lib,libdrmaa.dylib,TEXT_MODE) 
#else
public_copy_target($(DRMAA_LIB)/libdrmaa.so,lib,libdrmaa.so,TEXT_MODE) 
#endif

public_copy_target($(DRMAA_LIB)/libcondordrmaa.a,lib,libcondordrmaa.a,TEXT_MODE)
public_copy_target($(DRMAA_INC)/drmaa.h,include,drmaa.h,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/README,include,README,TEXT_MODE)

public_copy_target($(DRMAA_SRC)/auxDrmaa.c,src/drmaa,auxDrmaa.c,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/auxDrmaa.h,src/drmaa,auxDrmaa.h,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/config.h.in,src/drmaa,config.h.in,TEXT_MODE)

public_copy_target($(DRMAA_SRC)/configure,src/drmaa,configure,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/configure.in,src/drmaa,configure.in,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/documentation,src/drmaa,documentation,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/drmaa_common.c,src/drmaa,drmaa_common.c,TEXT_MODE)

public_copy_target($(DRMAA_SRC)/drmaa_common.h,src/drmaa,drmaa_common.h,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/drmaa.h,src/drmaa,drmaa.h,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/iniparser.c,src/drmaa,iniparser.c,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/iniparser.h,src/drmaa,iniparser.h,TEXT_MODE)

public_copy_target($(DRMAA_SRC)/libDrmaa.c,src/drmaa,libDrmaa.c,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/Makefile.in,src/drmaa,Makefile.in,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/README,src/drmaa,README,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/STATUS,src/drmaa,STATUS,TEXT_MODE)
public_copy_target($(DRMAA_SRC)/WISDOM,src/drmaa,WISDOM,TEXT_MODE)

