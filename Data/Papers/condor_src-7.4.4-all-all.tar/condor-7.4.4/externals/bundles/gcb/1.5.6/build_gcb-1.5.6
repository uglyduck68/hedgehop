#!/bin/sh

cd $PACKAGE_BUILD_DIR/$PACKAGE_NAME/

./configure --prefix=$PACKAGE_INSTALL_DIR
if [ $? -ne 0 ]
then
	echo "configure failed"
	exit 1
fi

make
if [ $? -ne 0 ]
then
	echo "make failed"
	exit 1
fi

mkdir -p $PACKAGE_INSTALL_DIR
make install
if [ $? -ne 0 ]
then
	echo "install failed"
	exit 1
fi
