#!/bin/sh

cd $PACKAGE_BUILD_DIR/$PACKAGE_NAME/

(cd include && ln -s asm-i386 asm)

if [ $? -ne 0 ]
then
	echo "'(cd include && ln asm-i386 asm)' failed"
	exit 1
fi

mkdir -p $PACKAGE_INSTALL_DIR

# this uses linux specific flags to preserve the symlink that was made above
cp -RP $PACKAGE_BUILD_DIR/$PACKAGE_NAME/* $PACKAGE_INSTALL_DIR
if [ $? -ne 0 ]
then
	echo "'cp -RP $PACKAGE_BUILD_DIR/$PACKAGE_NAME/* $PACKAGE_INSTALL_DIR' failed"
	exit 1
fi
